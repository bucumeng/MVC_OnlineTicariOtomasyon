@using MVCOnlineTicariOtomasyon.Models.Sınıflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>

    </tr>
    @foreach (var d in Model)
    {
        <tr> 
            <td>@d.PersonelId</td>
            <td>@d.PersonelAd</td>
            <td>@d.PersonelSoyad</td>
            <td>@d.PersonelGorsel</td>
            <td>@d.Departman.DepartmanAd</td>

            <td><a href="/Personel/PersonelGetir/ @d.PersonelId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Departman/DepartmanPersonelSatis/@d.PersonelId" class="btn btn-default" style="background-color:coral; color:white; ">Detaylar</a></td>

        </tr>
    }
</table>
<a href="/Personel/PersonelEkle" class="btn btn-info">Personel Ekle</a>


