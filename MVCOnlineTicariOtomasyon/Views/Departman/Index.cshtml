@using MVCOnlineTicariOtomasyon.Models.Sınıflar
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Departman</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.DepartmanId</td>
            <td>@d.DepartmanAd</td>
            <td><a href="/Departman/DepartmanSil/ @d.DepartmanId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Departman/DepartmanGetir/ @d.DepartmanId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Departman/DepartmanDetay/@d.DepartmanId" class="btn btn-default" style="background-color:coral; color:white; ">Detaylar</a></td>

        </tr>
    }
</table>
<a href="/Departman/DepartmanEkle" class="btn btn-info">Departman Ekle</a>
