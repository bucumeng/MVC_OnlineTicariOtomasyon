@model MVCOnlineTicariOtomasyon.Models.Sınıflar.Cariler
@{
    ViewBag.Title = "CariGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Cari Güncelleme Ekranı</h2>
<br />
@using (Html.BeginForm("CariGüncelle", "Cari", FormMethod.Post))
      {
        <div class="form-group">
            @Html.HiddenFor(x => x.CariId)
            @Html.LabelFor(x => x.CariAd)
            @Html.LabelFor(x => x.CariAd, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CariAd, "", new { @style = "color:red" })
            <br />

            @Html.LabelFor(x => x.CariSoyad)
            @Html.LabelFor(x => x.CariSoyad, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CariSoyad, "", new { @style = "color:orange" })
            <br />

            @Html.LabelFor(x => x.CariSehir)
            @Html.LabelFor(x => x.CariSehir, new { @class = "form-control" })
            <br />

            @Html.LabelFor(x => x.CariMail)
            @Html.LabelFor(x => x.CariMail, new { @class = "form-control" })
            <br />
            <button class="btn btn-default" style="background-color:yellowgreen">Güncelle</button>
        </div>

      } 